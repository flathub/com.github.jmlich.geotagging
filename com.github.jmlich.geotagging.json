{
  "app-id": "com.github.jmlich.geotagging",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.6",
  "base": "io.qt.qtwebengine.BaseApp",
  "base-version": "6.6",
  "sdk": "org.kde.Sdk",
  "command": "com.github.jmlich.geotagging",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=home",
    "--filesystem=xdg-public-share",
    "--filesystem=xdg-pictures",
    "--filesystem=xdg-run/gvfs",
    "--filesystem=xdg-run/gvfsd",
    "--share=network",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "exiv2",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Exiv2/exiv2/releases/download/v0.27.6/exiv2-0.27.6-Source.tar.gz",
          "sha256": "4c192483a1125dc59a3d70b30d30d32edace9e14adf52802d2f853abf72db8a6"
        }
      ]
    },
    {
      "name": "geotagging",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "-DVERSION:STRING=0.7.2"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/jmlich/geotagging.git",
          "tag": "0.7.2"
        }
      ]
    }
  ]
}
